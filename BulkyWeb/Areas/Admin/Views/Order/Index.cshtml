@model List<OrderHeader>


<div class="card border-0 shadow my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Orders List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Phone Number</th>
					<th>Email</th>
					<th>Status</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (OrderHeader orderHeader in Model)
				{
					<tr>
						<td>@orderHeader.Id</td>
						<td>@orderHeader.Name</td>
						<td>@orderHeader.PhoneNumber</td>
						<td>@orderHeader.ApplicationUser.Email</td>
						<td>@orderHeader.OrderStatus</td>
						<td>@orderHeader.OrderTotal</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-action="Details" asp-route-id="@orderHeader.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

